@page
@model XmlLocalizationSample.Pages.ExportModel
@{
    ViewData["Title"] = "Resource Exporter";
}

<h1 localize-content>@ViewData["Title"]</h1>

<alert></alert>

<alert-light dismissable="false">
    <localize>
        Use this exporter if to export all resources from ".xml" to ".resx" files.
    </localize>
</alert-light>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exportModal" localize-content>
    Export Resources
</button>

<!-- Modal -->
<div class="modal fade" id="exportModal" tabindex="-1" role="dialog" aria-labelledby="exportModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title" id="exportModalLabel" localize-content>Export Resources</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post">
                <div class="modal-body">
                    <localize>
                        <h3>Important Notice!</h3>
                        <p>After exporting the resources from ".xml" to ".resx", the application will restart at the first request.</p>
                        <p>That is because the application needs to compile ".resx" files into binary format ".resources".</p>
                    </localize>
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="approvedOnly" id="approvedOnly1" value="true" checked>
                            <label class="form-check-label" for="approvedOnly1" localize-content>
                                Export approved resources only.
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="approvedOnly" id="approvedOnly2" value="false">
                            <label class="form-check-label" for="approvedOnly2" localize-content>
                                Export all resources.
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="overwrite" id="overwrite2" value="false" checked>
                            <label class="form-check-label" for="overwrite2" localize-content>
                                Don't overwrite existing resources.
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="overwrite" id="overwrite1" value="true">
                            <label class="form-check-label" for="overwrite1" localize-content>
                                Overwrite existing resources.
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label localize-content>Select culture to export</label>
                        <language-nav render-mode="FormControl" 
                                      language-label="NativeName"
                                      name="culture" 
                                      class="form-control"></language-nav>
                    </div>
                </div>
                <div class="modal-footer">
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" localize-content>Close</button>
                    <button type="submit" class="btn btn-warning" localize-content>Export</button>
                </div>
            </form>
        </div>
    </div>
</div>